* {
  margin: 0;
  box-sizing: border-box;
  font-family: sans-serif;
}

header {
  width: 100%;
  height: 7rem;
  background-color: #9494bf;
  display: flex;
  justify-content: center;
  align-items: center;
}

body {
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  gap: 5rem;
}

.welcome {
  background-color: #794242;
  list-style: none;
  display: inline;
  color: #e7dada;
  padding: 0.7em;
  border-radius: 0.6em;
  font-family: sans-serif;
  font-size: 1.5rem;
  letter-spacing: 0.2ch;
}

.number-input {
  width: 70%;
  display: grid;
  align-self: center;
  grid-template-columns: 1fr auto 1fr 1.5fr;
  align-items: center;
  gap: 1.5em;
}

input, .math-operator, button[type=submit] {
  border: 1px solid #eee;
  border-radius: 2em;
  padding: 0.8em;
  box-shadow: 0 0.35em 0.85em 0.1em rgba(0, 0, 0, 0.24);
  font-size: 1.5rem;
}
input:focus, .math-operator:focus, button[type=submit]:focus {
  outline: none;
  box-shadow: 0 0.35em 0.85em 0.1em rgba(0, 0, 0, 0.24), 0 0 5em 0 #dcdcff;
  opacity: 0.8;
}

button[type=submit] {
  background-color: #576eff;
  color: #eee;
}

.math-operator {
  /*line-height: 0;*/
  height: 100%;
  font-weight: bold;
  border-radius: 1em;
  background-color: #dcdcff;
}

.webpack-image {
  width: 100%;
}

.error {
  text-align: center;
  padding: 1em;
  font-size: 2.3rem;
  background-color: #ff8282;
}

.result {
  text-align: center;
  padding: 1em;
  font-size: 2.3rem;
  background-color: #dcdcff;
}